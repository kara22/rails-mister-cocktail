<div class="container">
  <div class="row">
  <h1 class="text-center">Here is your cocktail</h1>
    <div class="col-xs-12 col-md-6">
      <p><%= @cocktail.name %></p>
      <p>Doses : </p>
      <% @cocktail.doses.each do |dose| %>
        <p><strong>Description :</strong> <%= dose.description %> | <strong>Ingredient :</strong> <%= dose.ingredient.name %> | <%= link_to "delete", dose_path(dose), method: :delete %></p>
      <% end %>
    </div>
    <div class="col-xs-12 col-md-6">
      <%= render "cocktails/cocktail", locals: { cocktail: @cocktail } %>
    </div>
  </div>
</div>


