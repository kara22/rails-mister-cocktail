<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path('cocktail.jpeg') %>');">
  <div class="banner-content">
    <h1>#GoodCocktail</h1>
    <p>Here you can find your best cocktail</p>
    <a class="btn btn-primary btn-lg">GET IT</a>
  </div>
</div>

<div class="container">
  <div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <% if cocktail.photos.size != 0 %>
        <% i = rand(cocktail.photos.size) %>
        <% picture_url = cl_image_path cocktail.photos[i].path %>
      <% else %>
        <% picture_url = image_path('background.jpg') %>
      <% end %>
    <%= render "card", cocktail: cocktail, picture_url: picture_url %>
    </div>
  <% end %>
  </div>
</div>
